<div class="row">
    <div class="cols-sm-12">

        <% if flash[:notice] %>
            <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
        <% end %>

        <table class="table table-bordered">
            <thead>
                <th>Nome</th>
                <th>Descricao</th>
                <th>Pre√ßo</th>
                <th>Quantidade</th>
                <th>Remover</th>
            </thead>
            <tbody>
                <% @listaProduto.each do |produto| %>
                <tr>
                    <td><%= produto.nome %></td>
                    <td><%= produto.descricao %></td>
                    <td><%= produto.preco %></td>
                    <td><%= produto.quantidade_estoque %></td>
                    <td><%= button_to "Remover", produto, method: :delete,
                                                class: "btn btn-danger",
                                                data: {confirm: "Deseja remover #{produto.nome}?"} %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%= link_to "Cadastrar novo produto", new_produto_path %>
    </div>
</div>
