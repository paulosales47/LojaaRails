                <th>Nome</th>
                <th>Descricao</th>
                <th>Pre√ßo</th>
                <th>Quantidade</th>
                <th>Remover</th>
            </thead>
            <tbody>
                <% @listaProduto.each do |produto| %>
                <tr>
                    <td><%= produto.nome %></td>
                    <td><%= produto.descricao %></td>
